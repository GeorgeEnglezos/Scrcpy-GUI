<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrcpyGUI.Controls.WirelessConnectionPanel">
    <!-- Main Grid -->
    <Grid RowDefinitions="Auto, *">
        <!-- Border -->
        <Border Grid.Row="1" Padding="40 ,20" StrokeThickness="2" Stroke="{StaticResource Purple2}" ZIndex="0">
            <VerticalStackLayout HorizontalOptions="Center">
                <HorizontalStackLayout Grid.Row="0" WidthRequest="270">
                    <Label FontSize="18" Padding="7" Text="TCP Port:" VerticalOptions="Center" WidthRequest="100"/>
                        <Entry FontSize="18" x:Name="TcpipEntry" Placeholder="TCP Port" Margin="0,5" Text="5555" WidthRequest="135"/>
                        <ImageButton ToolTipProperties.Text="Start TCP port"
                            x:Name="RunTCPCommand"
                            Clicked="OnRunTCP"
                            HeightRequest="18"
                            WidthRequest="18"
                            BackgroundColor="Transparent">

                            <ImageButton.Source>
                            <FontImageSource FontFamily="FontAwesome" Glyph="&#xf04b;" Color="{StaticResource Buttons}" Size="25"/>
                            </ImageButton.Source>
                        </ImageButton>
                    </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Row="1"  WidthRequest="270">
                        <Label FontSize="18" Padding="7" Text="Phone IP:" VerticalOptions="Center"  WidthRequest="100" />
                        <Entry FontSize="18" x:Name="PhoneIpEntry" Placeholder="Phone IP" Text="" WidthRequest="135"/>
                        <ImageButton ToolTipProperties.Text="Start TCP port"
                            x:Name="RunPhoneIpCommand"
                            Clicked="OnRunPhoneIp"
                            HeightRequest="18"
                            WidthRequest="18"
                            BackgroundColor="Transparent">

                            <ImageButton.Source>
                            <FontImageSource FontFamily="FontAwesome" Glyph="&#xf04b;" Color="{StaticResource Buttons}" Size="25"/>
                            </ImageButton.Source>
                        </ImageButton>

                    </HorizontalStackLayout>

                <Button Text="Disable TCP" Clicked="OnResetToUsb" MaximumWidthRequest="140" Margin="0, 40, 0, 20"  BackgroundColor="{StaticResource Buttons}" TextColor="White" FontAttributes="Bold" FontSize="16"/>

            </VerticalStackLayout>
        </Border>

        <!-- Label and Checkbox -->
        <FlexLayout Grid.RowSpan="2"
                    BackgroundColor="#1f1f1f"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    ZIndex="1"
                    TranslationY="-15">
            <Label Text="Wireless Connection"
                   TextColor="{StaticResource Purple2}"
                   FontSize="22"
                   FontAttributes="Bold"
                   Padding="10, 0"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </FlexLayout>
    </Grid>
</ContentView>
<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ScrcpyGUI.Controls"
             x:Class="ScrcpyGUI.Controls.OptionsPanel">

            <Grid Padding="10" RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="15">
                
                <!-- Settings Panel -->
                <controls:OptionsPackageSelectionPanel x:Name="OptionsPackageSelectionPanel" Grid.Row="0"/>

                <!-- Generic Options -->
                <controls:OptionsGeneralPanel x:Name="OptionsGeneralPanel" Grid.Row="1"/>
                
                <!-- Audio Options -->
                <controls:OptionsAudioPanel x:Name="OptionsAudioPanel" Grid.Row="2"/>

                <!-- Virtual Display Options -->
                <controls:OptionsVirtualDisplayPanel x:Name="OptionsVirtualDisplayPanel" Grid.Row="3"/>

                <!-- Screen Recording Panel -->
                <controls:OptionsScreenRecordingPanel x:Name="OptionsScreenRecordingPanel" Grid.Row="4"/>
            </Grid>
</ContentView>

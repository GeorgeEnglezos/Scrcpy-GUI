<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ScrcpyGUI.Controls"
             x:Class="ScrcpyGUI.Controls.SettingsPageOptions"
             xmlns:ur="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             x:Name="Root">

    <!-- Interactive Hover Card -->
    <Border x:Name="MainBorder"
            BackgroundColor="#252525"
            Padding="18,14"
            Margin="0,6">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10"/>
        </Border.StrokeShape>

        <Border.Triggers>
            <DataTrigger TargetType="Border" 
                         Binding="{Binding IsChecked, Source={x:Reference CheckboxControl}}" 
                         Value="True">
                <Setter Property="BackgroundColor" Value="#2D2D30"/>
                <Setter Property="Stroke" Value="#6A5ACD"/>
                <Setter Property="StrokeThickness" Value="1"/>
            </DataTrigger>
        </Border.Triggers>

        <Grid RowDefinitions="*" ColumnDefinitions="*,Auto">
            <StackLayout Grid.Column="0" 
                        VerticalOptions="Center"
                        Spacing="4">

                <Label x:Name="LabelControl"
                       HorizontalOptions="Start"
                       TextColor="White"
                       FontSize="16"
                       FontAttributes="Bold"
                       Text="{Binding LabelText, Source={x:Reference Root}}"/>

                <!-- Optional Description Text -->
                <Label Text="Toggle this option to enable the feature"
                       TextColor="#AAAAAA"
                       FontSize="12"
                       IsVisible="False"
                       x:Name="DescriptionLabel"/>
            </StackLayout>

            <ur:CheckBox CheckChanged="CheckBox_CheckedChanged" 
                         x:Name="CheckboxControl" 
                         Grid.Column="1"
                         IsChecked="{Binding IsChecked, Source={x:Reference Root}}" 
                         VerticalOptions="Center"
                         HorizontalOptions="End"
                         Color="#6A5ACD"
                         BackgroundColor="Transparent"
                         Scale="1.2"/>
        </Grid>
    </Border>
</ContentView>
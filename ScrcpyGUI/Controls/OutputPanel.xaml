<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:ScrcpyGUI.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ScrcpyGUI.Controls.OutputPanel"             
             xmlns:ur="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             SizeChanged="OnSizeChanged">
    
    <!-- Settings Panel -->
    <Grid x:Name="CommandPanel"
        Padding="20"
        MinimumWidthRequest="300"
        HorizontalOptions="FillAndExpand">

        <Label Text="Commands Preview and Output"
            TextColor="MintCream"
            FontSize="24"
            FontAttributes="Bold"
            Padding="10,0"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            TranslationY="-18"
            BackgroundColor="#1f1f1f"
            ZIndex="1"/>
        <Border Padding="30" StrokeThickness="3" Stroke="{StaticResource Purple4}">
            <Grid RowDefinitions="Auto,Auto, Auto, Auto, Auto"
                ColumnDefinitions="*,Auto,Auto"
                ColumnSpacing="15"   
                RowSpacing="10">

                <!-- Responsive Grid for Panels -->
                <Grid x:Name="ResponsiveGrid" Grid.Row="0" Grid.ColumnSpan="3" RowDefinitions="Auto, Auto" ColumnDefinitions="*, *">
                    <controls:ChecksPanel x:Name="ChecksPanel" Grid.Row="0" Grid.Column="0" Margin="2, 20"/>
                    <controls:WirelessConnectionPanel x:Name="WirelessConnectionPanel" Grid.Row="0" Grid.Column="1" Margin="2, 20"/>
                </Grid>


                <Border Stroke="{StaticResource PrimaryPurple}" Grid.Row="2" Grid.Column="0" StrokeThickness="2" StrokeShape="RoundRectangle 10">
                    <Label x:Name="FinalCommandPreview"
                           MinimumHeightRequest="80"
                           FontSize="16"
                           VerticalTextAlignment="Start"
                           HorizontalOptions="FillAndExpand"
                           Margin="10,10,10,10"
                           LineBreakMode="WordWrap"
                           FontAttributes="Bold"
                           FontFamily="Courier New">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Default command: scrcpy.exe --pause-on-exit=if-error" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Border>

                <ImageButton Grid.Row="2" Grid.Column="1" ToolTipProperties.Text="Run Command"
                    x:Name="RunCommand"
                    Clicked="OnRunGeneratedCommand"
                    HeightRequest="50"
                    WidthRequest="50"
                    BackgroundColor="Transparent"
                    Margin="5">
                                        
                    <ImageButton.Source>
                        <FontImageSource FontFamily="FontAwesome" Glyph="&#xf04b;" Color="{StaticResource ButtonColor}" Size="50"/>
                    </ImageButton.Source>
                </ImageButton>

                <ImageButton Grid.Row="2" Grid.Column="2" StyleClass="FilledTonalButton" 
                    x:Name="SaveCommand"
                    Clicked="OnSaveGeneratedCommand"
                    HeightRequest="50"
                    WidthRequest="50"
                    BackgroundColor="Transparent"
                    Margin="5">
                    <ImageButton.Source>
                        <FontImageSource FontFamily="FontAwesome" Glyph="&#xf004;" Color="{StaticResource ButtonColor}" Size="50"/>
                    </ImageButton.Source>
                </ImageButton>


                <!--Output Label-->

                <Border x:Name="AdbOutputLabelBorder" StrokeShape="RoundRectangle 10"
                        Grid.Row="3" 
                        Grid.ColumnSpan="3"                             
                        StrokeThickness="3" 
                        Stroke="{StaticResource PrimaryPurple}">

                    <Editor x:Name="AdbOutputLabel"
                            Text="Command Output"
                            FontFamily="Consolas"
                            FontSize="15"
                            BackgroundColor="#101010"
                            MinimumHeightRequest="100"
                            VerticalOptions="Center"
                            TextColor="white"
                            FontAttributes="Bold"
                            IsReadOnly="True"
                            Margin="0"
                            VerticalTextAlignment="Start"
                            HorizontalOptions="FillAndExpand"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</ContentView>

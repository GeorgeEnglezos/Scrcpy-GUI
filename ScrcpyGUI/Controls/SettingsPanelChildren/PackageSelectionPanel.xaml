<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrcpyGUI.Controls.OptionsPackageSelectionPanel">
    <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, Auto">

        <Entry
        x:Name="PackageSearchEntry"
        Placeholder="Search Package..."
        TextChanged="PackageSearchEntry_TextChanged"
        TextColor="{StaticResource Purple2}"
        PlaceholderColor="{Binding PackageTextColor}"
        Grid.Row="0"
        Grid.Column="0" />

        <ImageButton
        ToolTipProperties.Text="Clear Selected Package"
        Clicked="CleanPackageSelection"
        HeightRequest="30"
        WidthRequest="30"
        BackgroundColor="Transparent"
        Margin="0"
        Padding="0"
        Grid.Row="0"
        Grid.Column="1"
        HorizontalOptions="End"
        VerticalOptions="Center">
        <ImageButton.Source>
                <FontImageSource FontFamily="FontAwesome" Glyph="&#xf12d;" Color="{StaticResource Purple1}" Size="20"/>
        </ImageButton.Source>
        </ImageButton>
        
        <!--<ImageButton
        ToolTipProperties.Text="Refresh package list"
        Clicked="RefreshPackages"
        HeightRequest="30"
        WidthRequest="30"
        BackgroundColor="Transparent"
        Margin="0"
        Padding="0"
        Grid.Row="0"
        Grid.Column="1"
        HorizontalOptions="End"
        VerticalOptions="Center">
        <ImageButton.Source>
                <FontImageSource FontFamily="FontAwesome" Glyph="&#xf021;" Color="{StaticResource Purple2}" Size="20"/>
        </ImageButton.Source>
        </ImageButton>-->

        <CollectionView
        x:Name="PackageSuggestionsCollectionView"
        IsVisible="False"
        SelectionMode="Single"
        SelectionChanged="PackageSuggestionsCollectionView_SelectionChanged"
        BackgroundColor="DarkSlateGray"
        Grid.Row="1"
        Grid.ColumnSpan="2">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="x:String">
                    <Label Text="{Binding .}" Padding="10"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentView>

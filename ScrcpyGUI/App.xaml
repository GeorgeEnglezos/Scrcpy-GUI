<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ScrcpyGUI"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="ScrcpyGUI.App">
    <Application.Resources>
        <ResourceDictionary>

            <!--<LinearGradientBrush  x:Key="PageGradientBackground"  StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0b0e13" Offset="0.2" />
            </LinearGradientBrush>-->
            <LinearGradientBrush  x:Key="PageGradientBackground"  StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0A0D12" Offset="0.3" />
                <GradientStop Color="#080B10" Offset="0.75" />
            </LinearGradientBrush>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary x:Name="appColors" Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary x:Name="appStyles" Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/BorderStyles.xaml"/>



                <material:StyleResource ColorsOverride="{x:Reference appColors}"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
